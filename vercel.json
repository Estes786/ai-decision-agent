{
  "version": 2,
  "name": "my-portfolio",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],

        "distDir": "."
      }
    }
  ],

  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],

  "buildCommand": "npm run build",
  "outputDirectory": ".",
  "installCommand": "npm install",
  "framework": null,
  "public": true,
  "rewrites": [
    {

      "source": "/(.*)",
      "destination": "/index.html"

      "source": "/blog/(.*)",
      "destination": "/blog/index.html"

      "source": "/(.*)",
      "destination": "/index.html"

    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/dist/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}

